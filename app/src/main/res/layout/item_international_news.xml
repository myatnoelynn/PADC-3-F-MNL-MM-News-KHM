<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_brightness_1_black_24dp"
            android:gravity="center"
            android:text="Live"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_international_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_live"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/tv_live"
            android:text="Brexit: Pending UK banks will pose financial risk to EU"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_time_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_live"
            android:layout_below="@id/tv_international_news_title"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:gravity="center"
            android:text="19m"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_time_length"
            android:layout_below="@id/tv_international_news_title"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_time_length"
            android:drawableLeft="@drawable/ic_mode_comment_black_24dp"
            android:gravity="center"
            android:text="788"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_international_news_img"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@+id/tv_comment"
            android:layout_marginTop="26dp"
            android:scaleType="centerCrop"
            android:src="@drawable/international_news_img" />

        <TextView
            android:id="@+id/tv_international_news_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv_international_news_img"
            android:layout_below="@id/iv_international_news_img"
            android:text="UK aid firms / Millions in EU funds may be lost if no deal agreed"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_international_news_img"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_germany_news_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="40dp"
                    android:text="Germany / Coalition talks to move to next stage after marathon session"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_time_lenght_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_germany_news_brief"
                    android:layout_marginTop="110dp"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:gravity="center"
                    android:text="2h"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_germany_news_img"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="140dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/germany_news_img" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_frence_news_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="40dp"
                    android:text="Germany / Coalition talks to move to next stage after marathon session"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_time_lenght_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_germany_news_brief"
                    android:layout_marginTop="110dp"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:gravity="center"
                    android:text="2h"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="140dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/germany_news_img" />


            </FrameLayout>

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>